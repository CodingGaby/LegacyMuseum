---
import Breadcrumb from '../components/ui/BreadCrumb/Breadcrumb.astro';
import SideBar from '../components/ui/sidebar/SideBar.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} || Legacy Museum</title>
	</head>
	<body class="flex bg-gray-100 dark:bg-gray-900 min-h-screen">
    <SideBar />

    <main class="flex-1 p-6">
			<h1 class="text-LegacyBlue font-bold text-[26px] leading-[38px] dark:text-white">The Legacy Museum</h1>
			<Breadcrumb/>
      <slot />
    </main>
  </body>
</html>
<style is:global>
	:root {
		font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
	}
</style>
