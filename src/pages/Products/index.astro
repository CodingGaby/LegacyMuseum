---
import Layout from "../../layouts/Layout.astro"
---

<Layout title="Products">
    <!--Bienvenida al usuario -->
    <div class="lg:flex lg:items-center lg:justify-center">
        <h1 class="text-4xl font-bold leading-7 text-white sm:truncate sm:text-7xl sm:tracking-tight ">Welcome</h1>
    </div>
    <div class="mt-7 lg:flex lg:items-center lg:justify-center">
    <h2 class="text-2xl font-bold leading-7 text-white sm:truncate sm:text-3xl sm:tracking-tight ">Select your option</h2>
    </div>

    <!-- Opciones del usuario -->
    <div class="mt-20 flex items-center justify-center space-x-20">

        <!--  Souvenirs -->
        <div class="flex flex-col items-center text-center dark:text-white text-gray-700 icon-group">
            <a href="/Products/Souvenirs" class="icon-container">
                <svg width="180" height="240" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="icon icon-tabler icons-tabler-outline icon-tabler-gift">
                    <path stroke="none" d="M0 0h24v24H0z" fill="none"/>
                    <path d="M3 8m0 1a1 1 0 0 1 1 -1h16a1 1 0 0 1 1 1v2a1 1 0 0 1 -1 1h-16a1 1 0 0 1 -1 -1z" />
                    <path d="M12 8l0 13" />
                    <path d="M19 12v7a2 2 0 0 1 -2 2h-10a2 2 0 0 1 -2 -2v-7" />
                    <path d="M7.5 8a2.5 2.5 0 0 1 0 -5a4.8 8 0 0 1 4.5 5a4.8 8 0 0 1 4.5 -5a2.5 2.5 0 0 1 0 5" />
                  </svg>
                  <a href="/Products/Souvenirs">
                    <p class="flex flex-col items-center justify-center text-2xl font-bold leading-7 text-white sm:truncate sm:text-xl sm:tracking-tight mt-2">Souvenirs</p>
                  </a>
            </a>
        </div>

        <!--  Snacks -->
        <div class="flex flex-col items-center text-center dark:text-white text-gray-700 icon-group">
            <a href="/Products/Snacks" class="icon-container">
                <svg  width="180"  height="240"  viewBox="0 0 24 24"  fill="none"  stroke="white"  stroke-width="2"  stroke-linecap="round"  stroke-linejoin="round"  class="icon icon-tabler icons-tabler-outline icon-tabler-tools-kitchen-2"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19 3v12h-5c-.023 -3.681 .184 -7.406 5 -12zm0 12v6h-1v-3m-10 -14v17m-3 -17v3a3 3 0 1 0 6 0v-3" /></svg>
            </a>
            <a href="/Products/Snacks">
                <p class="flex flex-col items-center justify-center text-2xl font-bold leading-7 text-white sm:truncate sm:text-xl sm:tracking-tight mt-2">Snacks</p>
            </a>
        </div>
        
        <!--  VRA -->
        <div class="flex flex-col items-center text-center dark:text-white text-gray-700 icon-group">
            <a href="/Products/VRA" class="icon-container">
                <svg  xmlns="http://www.w3.org/2000/svg"  width="180"  height="240"  viewBox="0 0 24 24"  fill="white"  class="icon icon-tabler icons-tabler-filled icon-tabler-cardboards"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><path d="M19 5a3 3 0 0 1 3 3v8.5a3.5 3.5 0 0 1 -3.5 3.5h-1.062a4 4 0 0 1 -3.118 -1.504l-1.54 -1.92a1 1 0 0 0 -1.56 0l-1.538 1.917a4 4 0 0 1 -3.122 1.507h-1.06a3.5 3.5 0 0 1 -3.5 -3.5v-8.5a3 3 0 0 1 3 -3zm-11 5a2 2 0 0 0 -1.995 1.85l-.005 .15a2 2 0 1 0 2 -2m8 0a2 2 0 0 0 -1.995 1.85l-.005 .15a2 2 0 1 0 2 -2" /></svg>
            </a>
            <a href="/Products/VRA">
                <p class="flex flex-col items-center justify-center text-2xl font-bold leading-7 text-white sm:truncate sm:text-xl sm:tracking-tight mt-2">Virtual Reality Accesories</p>
            </a>
        </div>
    </div>
</Layout>

<style>
    /* Transiciones y animaciones */
    .icon-container {
        position: relative;
        overflow: hidden;
        display: inline-block;
        transition: transform 0.3s ease, filter 0.3s ease;
    }

    .icon {
        transition: transform 0.3s ease, color 0.3s ease, filter 0.3s ease;
    }


    /* Efecto de reflejo en el icono*/
    .icon-group:hover .icon-container::before {
        content: "";
        position: absolute;
        top: -50%;
        left: -50%;
        width: 40%;
        height: 200%;
        background: rgba(34, 69, 227, 0.3);
        transform: rotate(45deg);
        animation: shine 0.5s ease forwards;
    }

    /* Efecto hover en el párrafo */
    .icon-group:hover .paragraph {
        transition: transform 0.3s ease, color 0.3s ease;
        transform: scale(1.2);
        color: rgba(34, 69, 227, 0.9); /* Cambia el color del texto */
    }

    /* Animación de brinco */
    @keyframes bounce {
        0%, 100% {
            transform: translateY(0);
        }
        50% {
            transform: translateY(-10px); /* Brinco hacia arriba */
        }
    }

    @keyframes shine {
        0% {
            transform: translateX(-100%) rotate(45deg);
        }
        100% {
            transform: translateX(100%) rotate(45deg);
        }
    }
</style>
