---
import Layout from "../../../layouts/Layout.astro"
---

<Layout title="Add Products">
    <!--Bienvenida al usuario -->
    <div class="max-w-screen-xl mx-auto px-4 md:px-8">
        <h1 class="text-4xl font-bold leading-7 text-white sm:truncate sm:text-7xl sm:tracking-tight ">Welcome</h1>
        <div class="flex items-center justify-between">
            
          <h3 class="text-gray-800 text-xl font-bold sm:text-2xl dark:text-gray-300">Agregar Nuevo Producto</h3>
        </div>
        
        <div class="flex space-x-0">
            <!-- Primer columna -->
            <div class="mt-6  px-15 md:px-4 flex-1">
                <div>
                    <label for="id_Producto" class="block text-sm font-medium text-white">ID Producto</label>
                </div>
                <div>
                    <input 
                      type="text" 
                      name="id_Producto" 
                      id="id_Producto" 
                      placeholder="Ej. 01" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>
    
                  <div class="mt-3">
                    <label for="descripcion" class="block text-sm font-medium text-white">Descripción</label>
                  </div>
                  <div>
                    <textarea 
                      name="descripcion" 
                      id="descripcion" 
                      placeholder="Ingrese la descripción del producto" 
                      rows="3" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required
                    ></textarea>
                  </div>

                  <div class="mt-3">
                    <label for="precioSinIVA" class="block text-sm font-medium text-white">Precio sin IVA</label>
                  </div>
                  <div>
                    <input 
                      type="number" 
                      name="precioSinIVA" 
                      id="precioSinIVA" 
                      placeholder="Ej. 100.00" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>

                  <div class="mt-3">
                    <label for="IVA" class="block text-sm font-medium text-white">IVA</label>
                  </div>
                  <div>
                    <input 
                      type="number" 
                      name="IVA" 
                      id="IVA" 
                      placeholder="Ej. 16%" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>

                  <button type="submit" class="mt-6 px-4 py-2 bg-white text-black rounded-md hover:bg-green ">
                    Agregar Producto
                  </button>
            </div>

            <!-- Segunda columnas -->
            <div class="mt-6  px-1 md:px-8 flex-1">
                
                <div>
                    <label for="precioConIVA" class="block text-sm font-medium text-white">Precio con IVA</label>
                </div>
                <div>
                    <input 
                      type="number" 
                      name="precioConIVA" 
                      id="precioConIVA" 
                      placeholder="Ej. 116.00" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>

                  <div class="mt-3">
                    <label for="marca" class="block text-sm font-medium text-white">Marca</label>
                  </div>
                  <div class="flex-1">
                    <input 
                      type="text" 
                      name="marca" 
                      id="marca" 
                      placeholder="Ej. Samsung" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>

                  <div class="mt-3">
                    <label for="codigoBarras" class="block text-sm font-medium text-white">Código de Barras</label>
                  </div>
                  <div class="flex-1">
                    <input 
                      type="text" 
                      name="codigoBarras" 
                      id="codigoBarras" 
                      placeholder="Ej. 1234567890123" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required 
                    />
                  </div>

                  <div class="mt-3">
                    <label for="categoria" class="block text-sm font-medium text-white">Categoría</label>
                  </div>
                  <div class="flex-1">
                    <select 
                      name="categoria" 
                      id="categoria" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required
                    >
                      <option value="Tecnología">Tecnología</option>
                      <option value="Accesorios">Accesorios</option>
                      <option value="Experiencias">Experiencias</option>
                      <option value="Libros">Libros</option>
                      <option value="Souvenirs">Souvenirs</option>
                    </select>
                  </div>

                  <div class="mt-3">
                    <label for="estado" class="block text-sm font-medium text-white">Estado</label>
                  </div>
                  <div>
                    <select 
                      name="estado" 
                      id="estado" 
                      class="mt-1 p-2 block w-4/5 h-10 border border-gray-300 rounded-lg shadow-sm" 
                      required
                    >
                      <option value="disponible">Disponible</option>
                      <option value="agotado">Agotado</option>
                      <option value="en promoción">En Promoción</option>
                    </select>
                  </div>
            </div>
        </div>  
</Layout>