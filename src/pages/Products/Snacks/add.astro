---
import Layout from "../../../layouts/Layout.astro"
const path = Astro.url.pathname.replace(/\/$/, ""); // Elimina el "/" al final si existe.
const previousPath = path.substring(0, path.lastIndexOf("/")) || "/";

import type { InputType } from "@customTypes/InputType";

interface Props {
  name: string;
  title?: string;
  type: InputType;
  isRequired?: boolean;
  placeholder?: string;
  value?: string | number;
  isDisabled?: boolean;
}

const { title, type, placeholder, isRequired, name, value, isDisabled } =
  Astro.props;
---

<Layout title="VRA Manteinance">
    <div class="flex justify-between items-center mb-6">
        <h3 
        class="text-2xl font-semibold dark:text-white">Alta Alimentos
        </h3>
        <div class="flex flex-col w-96">
          <label for="header-date" class="text-sm font-medium text-white">
            Fecha
          </label>
          <div class="relative">
            <input
            type={type}
            id={name}
            name={name}
            placeholder={placeholder}
            value={value}
            required={isRequired}
            disabled={isDisabled}
            aria-describedby="helper-text-explanation"
            appearance-none
            class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
              focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
              dark:text-white flex-1 min-w-[200px] 
              [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
              `}
            />
            <span
              class="absolute right-3 top-1/2 transform -translate-y-1/2"
              role="img"
              aria-label="calendar"
            >
              ðŸ“…
            </span>
          </div>
        </div>
      </div>

      <div class="grid grid-cols-2 gap-4">
                <!-- Primera columna -->
                <div class="flex flex-col">
                    <label for="idAlmacen" class="font-medium text-white mb-1">ID AlmacÃ©n</label>
