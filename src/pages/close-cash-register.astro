---
import Layout from '../layouts/Layout.astro';
---

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #f7f7f7;
    box-sizing: border-box;
  }

  .container {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100vh;
  }

  .form-box {
    background-color: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    text-align: center;
    width: 300px;
  }

  h1 {
    color: #333;
    font-size: 2rem;
    margin-bottom: 1rem;
  }

  .form-group {
    margin-bottom: 1.5rem;
    text-align: left;
  }

  label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  input[type="text"],
  input[type="password"] {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 1rem;
    font-size: 1rem;
    box-sizing: border-box;
  }

  .btn-group {
    display: flex;
    justify-content: space-between;
  }

  .btn {
    background-color: #007bff;
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    width: 45%;
  }

  .btn:hover {
    background-color: #0056b3;
  }

  .btn-secondary {
    background-color: #6c757d;
  }

  .btn-secondary:hover {
    background-color: #5a6268;
  }

  .header-right {
    position: absolute;
    top: 20px;
    right: 20px;
  }

  .header-right input[type="date"] {
    padding: 0.5rem;
    font-size: 1rem;
    border-radius: 4px;
    border: 1px solid #ccc;
  }
</style>

<Layout title="Cerrar Caja">
  <div class="container">
    <h1 class="text-blue-500">The Legacy Museum</h1>

    <div class="header-right">
      <label for="date">Fecha</label>
      <input type="date" id="date" />
    </div>

    <div class="form-box">
      <h1>Cerrar Caja</h1>

      <div class="form-group">
        <label for="user">Usuario</label>
        <input type="text" id="user" placeholder="Int(10)" />
      </div>

      <div class="form-group">
        <label for="password">Contrase√±a</label>
        <input type="password" id="password" placeholder="S(20)" />
      </div>

      <div class="btn-group">
        <button class="btn">Aceptar</button>
        <button class="btn btn-secondary">Cancelar</button>
      </div>
    </div>
  </div>
</Layout>