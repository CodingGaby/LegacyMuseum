---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<style>
  body {
    font-family: Arial, sans-serif;
    margin: 0;
    padding: 20px;
    background-color: #f7f7f7;
    box-sizing: border-box;
  }

  .container {
    width: 100%;
    max-width: 1200px;
    margin: 0 auto;
    background-color: #fff;
    padding: 2rem;
    border-radius: 8px;
    box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
  }

  .form-left {
    width: 48%;
  }

  .form-right {
    width: 48%;
  }

  h1, h2 {
    color: #333;
    font-size: 1.75rem;
    text-align: left;
  }

  .form-group {
    margin-bottom: 1.5rem;
    width: 100%;
  }

  label {
    display: block;
    font-weight: bold;
    margin-bottom: 0.5rem;
    font-size: 1rem;
  }

  input[type="text"],
  input[type="date"],
  input[type="number"],
  input[type="password"],
  select {
    width: 100%;
    padding: 0.75rem;
    border: 1px solid #ccc;
    border-radius: 4px;
    margin-bottom: 1rem;
    font-size: 1rem;
    box-sizing: border-box;
  }

  input[type="radio"],
  input[type="checkbox"] {
    margin-right: 0.5rem;
  }

  .form-group-inline {
    display: flex;
    gap: 1rem;
  }

  .form-group-inline input {
    width: 100%;
  }

  .btn {
    background-color: #007bff;
    color: white;
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 4px;
    font-size: 1rem;
    cursor: pointer;
    width: 100%;
    text-align: center;
  }

  .btn:hover {
    background-color: #0056b3;
  }

  .card {
    border: 1px solid #ccc;
    padding: 1rem;
    border-radius: 5px;
    margin-top: 2rem;
    background-color: #f9f9f9;
  }

  /* Responsive design */
  @media (max-width: 768px) {
    .container {
      flex-direction: column;
    }

    .form-left, .form-right {
      width: 100%;
    }
  }
</style>

<Layout title="Pago con Tarjeta">
  <div class="container">
    <div class="form-left">
      <h1>Pago con Tarjeta</h1>
      
      <div class="form-group">
        <label for="card-type">Elegir tipo de tarjeta</label>
        <select id="card-type">
          <option value="credito">Crédito</option>
          <option value="debito">Débito</option>
        </select>
      </div>

      <div class="form-group-inline">
        <div class="form-group">
          <label for="expiry">Fecha de Expiración</label>
          <input type="text" id="expiry" placeholder="MM/YY" />
        </div>
        <div class="form-group">
          <label for="cvv">CVV</label>
          <input type="text" id="cvv" placeholder="CVV" />
        </div>
      </div>

      <div class="form-group">
        <label for="postal">Código Postal</label>
        <input type="text" id="postal" placeholder="Código Postal" />
      </div>

      <div class="form-group">
        <label for="name">Nombre</label>
        <input type="text" id="name" placeholder="Nombre" />
      </div>

      <div class="form-group">
        <label for="surname">Apellido</label>
        <input type="text" id="surname" placeholder="Apellido" />
      </div>

      <div class="form-group">
        <label for="card-number">Número de Tarjeta</label>
        <input type="text" id="card-number" placeholder="Número de Tarjeta" />
      </div>
    </div>

    <div class="form-right">
      <div class="form-group">
        <label for="exhibition">Buscar Exhibición</label>
        <input type="text" id="exhibition" placeholder="Buscar Exhibición" />
      </div>

      <div class="form-group">
        <label for="date">Fecha</label>
        <input type="date" id="date" />
      </div>

      <div class="form-group">
        <label>Forma de Pago</label>
        <div class="payment-options">
          <div>
            <input type="radio" id="cash" name="payment" value="cash" />
            <label for="cash">Efectivo</label>
          </div>
          <div>
            <input type="radio" id="card" name="payment" value="card" />
            <label for="card">Tarjeta</label>
          </div>
          <div>
            <input type="radio" id="other" name="payment" value="other" />
            <label for="other">Otro</label>
          </div>
        </div>
      </div>

      <div class="form-group">
        <label for="promotion">Promoción a Aplicar</label>
        <input type="checkbox" id="promotion" />
      </div>

      <div class="card">
        <h3>Boletos por Adquirir</h3>
        <p>Total: $500</p>
        <button class="btn">Confirmar Transacción</button>
      </div>
    </div>
  </div>
</Layout>