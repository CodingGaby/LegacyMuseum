---
import Layout from "../../layouts/Layout.astro";
import TrashIcon from "../../components/ui/icons/TrashIcon.astro";
import EditIcon from "../../components/ui/icons/EditIcon.astro";
import EditRecord from "../../components/ui/Tables/EditRecord.astro";
import ItemStatus from "../../components/ui/Tables/ItemStatus.astro";
import AddRegisterBtn from "../../components/ui/Buttons/AddRegisterBtn.astro";
import { turso } from "src/turso";

const rows = await turso.execute(`
  SELECT 
    ba.bankAccountID, ba.bankID, ba.entityID, ba.entityType, ba.currencyID, 
    ba.accountTypeID, ba.customerID, ba.statusID, ba.bicCode,
    b.bankName, c.currencyName, at.accountTypeName, s.statusName
  FROM BankAccounts ba
  JOIN Banks b ON ba.bankID = b.bankID
  JOIN Currencies c ON ba.currencyID = c.currencyID
  JOIN AccountTypes at ON ba.accountTypeID = at.accountTypeID
  JOIN Status s ON ba.statusID = s.statusID
`);

const data = rows.toJSON(); // Convertir a formato JSON
---

<Layout title="Bank Accounts">
  <div class="max-w-screen-xl mx-auto px-4 md:px-8">
    <div class="items-start justify-between md:flex">
      <div class="max-w-lg">
        <h3 class="text-gray-800 text-xl font-bold sm:text-2xl dark:text-gray-300">
          Bank Accounts
        </h3>
      </div>
      <div class="mt-3 md:mt-0">
        <AddRegisterBtn/>
      </div>
    </div>
    <div class="mt-6 shadow-sm border rounded-lg overflow-x-auto">
      <table class="w-full table-auto text-sm text-left">
        <thead class="dark:bg-gray-400/20 dark:text-white bg-gray-50 text-gray-600 font-medium border-b">
          <tr>
            <th class="py-3 px-6">Bank Name</th>
            <th class="py-3 px-6">Account Type</th>
            <th class="py-3 px-6">Currency</th>
            <th class="py-3 px-6">Entity Type</th>
            <th class="py-3 px-6">BIC Code</th>
            <th class="py-3 px-6">Status</th>
            <th class="py-3 px-6"></th>
          </tr>
        </thead>
        <tbody class="text-gray-600 divide-y">
          {
            data.map((item) => (
              <tr>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.bankName}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.accountTypeName}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.currencyName}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white capitalize">{item.entityType}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.bicCode}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white capitalize">
                  <ItemStatus status={item.statusName} />
                </td>
                <td class="flex items-center justify-center gap-4 m-2 text-right px-6 whitespace-nowrap">
                  <EditRecord href={`/bankaccounts/edit/${item.bankAccountID}`}>
                    <EditIcon/>
                  </EditRecord>
                  <a
                    href={`/bankaccounts/delete?bankAccountID=${item.bankAccountID}`}
                    class="py-2 px-3 inline-block text-white duration-150 font-medium bg-red-600 rounded-lg hover:bg-red-500 active:bg-red-700 md:text-sm"
                  >
                    <TrashIcon/>
                  </a>
                </td>
              </tr>
            ))
          }
        </tbody>
      </table>
    </div>
  </div>
</Layout>
