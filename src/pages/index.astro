---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---


<Layout title="Consulta de Orden">
  <!-- Sidebar -->
  <aside class="sidebar">
    <div class="logo">The Legacy Museum</div>
    <ul class="menu">
      <li><a href="#">Central</a></li>
      <li><a href="#">Eventos</a></li>
      <li><a href="#">Usuarios</a></li>
      <li><a href="#">Estadísticas</a></li>
    </ul>
    <ul class="settings">
      <li><a href="#">Configuración</a></li>
      <li><a href="#">Cerrar Sesión</a></li>
    </ul>
  </aside>

  <!-- Main Content -->
  <div class="form-container">
    <h1 class="form-title">Consulta de Orden</h1>

    <form class="form-grid-wide">
      <!-- Primera fila -->
      <div class="form-group">
        <label>ID</label>
        <input type="text" placeholder="int (3)" />
      </div>
      <div class="form-group">
        <label>Fecha</label>
        <input type="date" placeholder="MM/DD/YYYY" />
      </div>

      <!-- Segunda fila -->
      <div class="form-group">
        <label>Orden</label>
        <input type="text" placeholder="s (20)" />
      </div>
      <div class="form-group">
        <label>Número</label>
        <input type="text" placeholder="int (10)" />
      </div>

      <!-- Tercera fila -->
      <div class="form-group">
        <label>RFC</label>
        <input type="text" placeholder="s (100)" />
      </div>
      <div class="form-group">
        <label>Nombre</label>
        <input type="text" placeholder="s (100)" />
      </div>

      <!-- Agregar las filas restantes siguiendo el formato -->
      <!-- Continuar con el resto de los campos según el diseño -->
    </form>

    <!-- Botón -->
    <div class="form-actions">
      <button class="btn-primary">Regresar</button>
    </div>
  </div>
</Layout>

<style>
/* Sidebar Styles */
.sidebar {
  width: 250px;
  background-color: #f8f9fa;
  position: fixed;
  top: 0;
  left: 0;
  height: 100%;
  padding: 20px;
}

.logo {
  font-size: 1.5rem;
  font-weight: bold;
  margin-bottom: 20px;
  color: #007bff;
}

.menu {
  list-style: none;
  padding: 0;
}

.menu li {
  margin: 10px 0;
}

.menu a {
  text-decoration: none;
  color: #343a40;
  font-weight: 500;
}

.settings {
  list-style: none;
  padding: 0;
  margin-top: 50px;
}

.settings li {
  margin: 10px 0;
}

.settings a {
  text-decoration: none;
  color: #6c757d;
}

/* Form Styles */
.form-container {
  margin-left: 270px;
  padding: 40px;
}

.form-title {
  font-size: 2rem;
  margin-bottom: 20px;
}

.form-grid-wide {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 20px;
}

.form-group label {
  font-size: 0.9rem;
  font-weight: normal;
  color: #6c757d;
}

.form-group input,
.form-group select {
  padding: 8px;
  font-size: 0.9rem;
  border: 1px solid #ced4da;
  border-radius: 4px;
  background-color: #fff;
}

.form-actions {
  display: flex;
  justify-content: flex-start;
  margin-top: 20px;
}

.btn-primary {
  padding: 10px 20px;
  background-color: #007bff;
  color: white;
  border: none;
  border-radius: 4px;
  cursor: pointer;
}

.btn-primary:hover {
  background-color: #0056b3;
}
</style>
