---
import Layout from "src/layouts/Layout.astro"
const path = Astro.url.pathname.replace(/\/$/, "");
const previousPath = path.substring(0, path.lastIndexOf("/")) || "/";

import type { InputType } from "@customTypes/InputType";

interface Props {
  name: string;
  title?: string;
  type: InputType;
  isRequired?: boolean;
  placeholder?: string;
  value?: string | number;
  isDisabled?: boolean;
}

const { title, type, placeholder, isRequired, name, value, isDisabled } =
  Astro.props;
---

<Layout title="Add Clients">
    <!--Bienvenida al usuario -->
    <div class="max-w-screen-xl mx-auto px-4 md:px-8">
        <h1 class="text-4xl font-bold leading-7 text-white sm:truncate sm:text-7xl sm:tracking-tight ">Welcome</h1>
        <div class="flex items-center justify-between">
            
          <h3 class="text-gray-800 text-xl font-bold sm:text-2xl dark:text-gray-300">Add new Client</h3>
        </div>
        
        <div class="flex space-x-0">
            <!-- Primer columna -->
            <div class="mt-6  px-15 md:px-4 flex-1">
                <div>
                    <label for="idCliente" class="block text-sm font-medium text-white">ID Cliente</label>
                </div>
                <div>
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>
    
                <div class="mt-3">
                    <label for="idCuentaBanco" class="block text-sm font-medium text-white">ID Cuenta Banco</label>
                </div>
                <div>
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>

                <div class="mt-3">
                    <label for="idDireccion" class="block text-sm font-medium text-white">ID Dirección</label>
                </div>
                <div>
                    <textarea 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    ></textarea>
                </div>
            </div>

            <!-- Segunda columna -->
            <div class="mt-6  px-1 md:px-8 flex-1">
                
                <div>
                    <label for="idStatus" class="block text-sm font-medium text-white">ID Status</label>
                </div>
                <div>
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>

                <div class="mt-3">
                    <label for="CURP" class="block text-sm font-medium text-white">CURP</label>
                </div>
                <div>
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>

                <div class="mt-3">
                    <label for="telefono" class="block text-sm font-medium text-white">Teléfono</label>
                </div>
                <div class="flex-1">
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>

                <div class="mt-3">
                    <label for="email" class="block text-sm font-medium text-white">Email</label>
                </div>
                <div class="flex-1">
                    <input 
                    type={type}
                    id={name}
                    name={name}
                    placeholder={placeholder}
                    value={value}
                    required={isRequired}
                    disabled={isDisabled}
                    aria-describedby="helper-text-explanation"
                    appearance-none
                    class={`w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 
                      focus:ring-LegacyBlue-600 focus:border-LegacyBlue-600 dark:border-2 dark:border-gray-700 
                      dark:text-white flex-1 min-w-[200px] 
                      [appearance:textfield] [&::-webkit-outer-spin-button]:appearance-none [&::-webkit-inner-spin-button]:appearance-none
                        ${isDisabled ? "dark:bg-gray-700/70" : "dark:bg-gray-700/20"}
                      `}
                    />
                </div>
            </div>
        </div>

        <!-- Botón enviar -->
        <div class="flex justify-center mt-6 space-x-4">
            <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded-md hover:bg-blue-600 focus:outline-none focus:ring-2 focus:ring-blue-500">Guardar</button>
          
            <a
                href={previousPath}
                class="inline-block px-4 py-2 text-white duration-150 font-medium bg-LegacyBlue-400 rounded-lg hover:bg-LegacyBlue-500 active:bg-LegacyBlue-700 md:text-sm capitalize"
            >
                <button class="text-lg">Regresar</button>
            </a>
        </div>
    </div>  
</Layout>
