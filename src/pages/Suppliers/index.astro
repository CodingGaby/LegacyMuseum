---
<Layout title="Proveedores">
    <div class="max-w-screen-xl mx-auto px-4 md:px-8">
      <div class="flex items-start justify-between md:flex">
        <div class="max-w-lg">
          <h3 class="text-gray-800 text-xl font-bold sm:text-2xl dark:text-gray-300">
            Proveedores
          </h3>
        </div>
        <div class="mt-3 md:mt-0">
          <AddRegisterBtn />
        </div>
      </div>
      <div class="mt-6 shadow-sm border rounded-lg overflow-x-auto">
        <table class="w-full table-auto text-sm text-left">
          <thead class="dark:bg-gray-400/20 dark:text-white bg-gray-50 text-gray-600 font-medium border-b">
            <tr>
              <th class="py-3 px-6 text-left">Id Proveedor</th>
              <th class="py-3 px-6 text-left">Razón Social</th>
              <th class="py-3 px-6 text-left">RFC</th>
              <th class="py-3 px-6 text-left">CURP</th>
              <th class="py-3 px-6 text-left">Dirección</th>
              <th class="py-3 px-6 text-left">Estado</th>
              <th class="py-3 px-6 text-left">Municipio</th>
              <th class="py-3 px-6 text-left">Colonia</th>
              <th class="py-3 px-6 text-left">Código Postal</th>
              <th class="py-3 px-6 text-left">Teléfono</th>
              <th class="py-3 px-6 text-left">Estratificación</th>
              <th class="py-3 px-6 text-left">Giro Comercial</th>
              <th class="py-3 px-6 text-left">Copia del LNE</th>
              <th class="py-3 px-6 text-left">Banco</th>
              <th class="py-3 px-6 text-left">Cuenta</th>
              <th class="py-3 px-6 text-left">Sucursal</th>
              <th class="py-3 px-6 text-left">CLABE</th>
              <th class="py-3 px-6 text-left">Status</th>
              <th class="py-3 px-6 text-right"></th>
            </tr>
          </thead>
          <tbody class="text-gray-600 divide-y">
            {Suppliers.map((item) => (
              <tr key={item.id_Proveedor}>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.id_Proveedor}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.razon}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.rfc}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.curp}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.direccion}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.estado}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.municipio}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.colonia}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.codigo_postal}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.telefono}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.estratificacion}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.giro_comercial}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.copia_lne}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.banco}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.cuenta}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.sucursal}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white">{item.clave}</td>
                <td class="px-6 py-4 whitespace-nowrap dark:text-white capitalize">
                  <ItemStatus status={item.status} />
                </td>
                <td class="flex items-center justify-end gap-4 m-2 text-right px-6 whitespace-nowrap">
                  <EditRecord href={`/proveedores/${item.id_Proveedor}`}>
                    <EditIcon />
                  </EditRecord>
                  <a
                    href="prueba"
                    class="py-2 px-3 inline-block text-white duration-150 font-medium bg-red-600 rounded-lg hover:bg-red-500 active:bg-red-700 md:text-sm"
