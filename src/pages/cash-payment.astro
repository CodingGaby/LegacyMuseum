---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f7f7f7;
      box-sizing: border-box;
    }
  
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      background-color: #fff;
      padding: 2rem;
      border-radius: 8px;
      box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }
  
    .form-left {
      width: 48%;
    }
  
    .form-right {
      width: 48%;
    }
  
    h1 {
      color: #333;
      font-size: 1.75rem;
      text-align: left;
    }
  
    .form-group {
      margin-bottom: 1.5rem;
      width: 100%;
    }
  
    label {
      display: block;
      font-weight: bold;
      margin-bottom: 0.5rem;
      font-size: 1rem;
    }
  
    input[type="text"],
    input[type="date"],
    input[type="number"] {
      width: 100%;
      padding: 0.75rem;
      border: 1px solid #ccc;
      border-radius: 4px;
      margin-bottom: 1rem;
      font-size: 1rem;
      box-sizing: border-box;
    }
  
    .btn {
      background-color: #007bff;
      color: white;
      padding: 0.75rem 1.5rem;
      border: none;
      border-radius: 4px;
      font-size: 1rem;
      cursor: pointer;
      width: 100%;
      text-align: center;
    }
  
    .btn:hover {
      background-color: #0056b3;
    }
  
    .card {
      border: 1px solid #ccc;
      padding: 1rem;
      border-radius: 5px;
      margin-top: 2rem;
      background-color: #f9f9f9;
    }
  
    /* Responsive design */
    @media (max-width: 768px) {
      .container {
        flex-direction: column;
      }
  
      .form-left, .form-right {
        width: 100%;
      }
    }
  </style>
  
  <Layout title="Pago en Efectivo">
    <div class="container">
      <div class="form-left">
        <h1>Pago en Efectivo</h1>
  
        <div class="form-group">
