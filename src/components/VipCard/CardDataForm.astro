<form class="max-w-full mx-auto p-8">
  <h2 class="text-2xl font-bold mb-6">Datos de la Tarjeta</h2>

  <div class="mb-4">
    <label for="cardNumber" class="block text-sm font-medium mb-1">
      Número De Tarjeta
    </label>
    <input 
      type="text" id="cardNumber" name="cardNumber" placeholder="1234567890123456789012" disabled
      class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <div class="mb-4">
    <label for="email" class="block text-sm font-medium mb-1">
      Correo Electrónico
    </label>
    <input 
      type="email" id="email" name="email" placeholder="johndoe@mail.com"
      class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
    />
  </div>

  <h3 class="text-xl font-semibold mb-4">Cuenta Bancaria</h3>

  <div class="flex flex-wrap gap-4">
    <div class="flex-1 min-w-[200px] mb-4">
      <label for="accountNumber" class="block text-sm font-medium mb-1">
        Número De Cuenta <span class="text-red-500">*</span>
      </label>
      <input 
        type="text" id="accountNumber" name="accountNumber" placeholder="1234567890123456789012" required
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="accountType" class="block text-sm font-medium mb-1">
        Tipo
      </label>
      <select 
        id="accountType" name="accountType" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="">Selecciona un tipo de cuenta</option>
        <option value="corriente" selected>Corriente</option>
        <option value="ahorro">Ahorro</option>
        <option value="nomina">Nómina</option>
        <option value="inversion">Inversión</option>
        <option value="joven">Joven</option>
        <option value="pensiones">Pensiones</option>
      </select>
    </div>
    
    <div class="flex-1 min-w-[200px] mb-4">
      <label for="currency" class="block text-sm font-medium mb-1">
        Divisa
      </label>
      <select 
        id="currency" name="currency" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      >
        <option value="">Selecciona una divisa</option>
        <option value="usd">Dólar Estadounidense (USD)</option>
        <option value="eur">Euro (EUR)</option>
        <option value="mxn" selected>Peso Mexicano (MXN)</option>
        <option value="gbp">Libra Esterlina (GBP)</option>
        <option value="jpy">Yen Japonés (JPY)</option>
        <option value="cad">Dólar Canadiense (CAD)</option>
        <option value="chf">Franco Suizo (CHF)</option>
        <option value="cny">Yuan Chino (CNY)</option>
      </select>
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="bicCode" class="block text-sm font-medium mb-1">
        Código BIC
      </label>
      <input 
        type="text" id="bicCode" name="bicCode" placeholder="1234567890123456789012" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
  </div>

  <h3 class="text-xl font-semibold mb-4">Información Del Titular</h3>

  <div class="flex flex-wrap gap-4">
    <div class="flex-1 min-w-[200px] mb-4">
      <label for="name" class="block text-sm font-medium mb-1">
        Nombre(s)
      </label>
      <input 
        type="text" id="name" name="name" placeholder="John" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="paternalSurname" class="block text-sm font-medium mb-1">
        Apellido Paterno
      </label>
      <input 
        type="text" id="paternalSurname" name="paternalSurname" placeholder="Doe" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="maternalSurname" class="block text-sm font-medium mb-1">
        Apellido Materno
      </label>
      <input 
        type="text" id="maternalSurname" name="maternalSurname" placeholder="Doe" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="rfc" class="block text-sm font-medium mb-1">
        RFC
      </label>
      <input 
        type="text" id="rfc" name="rfc" placeholder="VECJ880326" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
  </div>

  <div class="flex flex-wrap gap-4">
    <div class="flex-1 min-w-[200px] mb-4">
      <label for="phone" class="block text-sm font-medium mb-1">
        Teléfono
      </label>
      <input 
        type="tel" id="phone" name="phone" placeholder="1234567890" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="address" class="block text-sm font-medium mb-1">
        Dirección
      </label>
      <input 
        type="text" id="address" name="address" placeholder="215 E Tasman Dr Po Box 65502 CA 95134 San Jose" disabled
        class="w-full p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>

    <div class="flex-1 min-w-[200px] mb-4">
      <label for="birthDate" class="block text-sm font-medium mb-1">
        Fecha De Nacimiento
      </label>
      <input 
        type="date" id="birthDate" name="DD/MM/AAAA" disabled
        class="w-full uppercase p-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
    </div>
  </div>
</form>