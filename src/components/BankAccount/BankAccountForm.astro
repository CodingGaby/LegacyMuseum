---
import FormInput from "@components/ui/Forms/FormInput.astro";
import FormSelect from "@components/ui/Forms/FormSelect.astro";

// Aquí puedes importar tus datos como las opciones de divisas, tipo de cuenta, etc.
// Este código asume que los valores de `accountTypes`, `currencies` y `banks` son proporcionados de alguna forma.
---

<form class="max-w-full mx-auto p-8">
  <h2 class="text-2xl dark:text-white font-bold mb-6">Bank Account Information</h2>

  <FormInput name="bankAccountID" type="number" isDisabled placeholder="ID automático">
    Bank Account ID
  </FormInput>

  <!-- Bank Selection -->
  <FormSelect name="bankID" title="Select Bank">
    <option value="">Select a bank</option>
    <!-- Reemplaza estas opciones con los bancos de tu base de datos -->
    <option value="1" selected>Banco BBVA</option>
    <option value="2">Banco Santander</option>
    <option value="3">Banco Banorte</option>
  </FormSelect>

  <!-- Entity Type: customer, supplier, employee -->
  <FormSelect name="entityType" title="Entity Type">
    <option value="customer" selected>Customer</option>
    <option value="supplier">Supplier</option>
    <option value="employee">Employee</option>
  </FormSelect>

  <h3 class="text-xl dark:text-white font-semibold mb-4">Bank Account Details</h3>

  <div class="flex flex-wrap gap-4">
    <!-- Currency Type -->
    <FormSelect name="currencyID" title="Currency">
      <option value="">Select Currency</option>
      <!-- Aquí también deberías reemplazar estas opciones con las monedas de tu base de datos -->
      <option value="1" selected>Peso Mexicano (MXN)</option>
      <option value="2">Dólar Estadounidense (USD)</option>
      <option value="3">Euro (EUR)</option>
    </FormSelect>

    <!-- Account Type -->
    <FormSelect name="accountTypeID" title="Account Type">
      <option value="">Select Account Type</option>
      <option value="1" selected>Corriente</option>
      <option value="2">Ahorro</option>
      <option value="3">Nómina</option>
    </FormSelect>

    <!-- BIC Code -->
    <FormInput name="bicCode" type="text" placeholder="BIC Code">
      BIC Code
    </FormInput>

    <!-- Customer ID -->
    <FormInput name="customerID" type="number" placeholder="Customer ID">
      Customer ID
    </FormInput>

    <!-- Account Status -->
    <FormSelect name="statusID" title="Account Status">
      <option value="1" selected>Active</option>
      <option value="2">Inactive</option>
    </FormSelect>
  </div>

  <h3 class="text-xl dark:text-white font-semibold mb-4">Owner Information</h3>

  <div class="flex flex-wrap gap-4">
    <!-- Owner Name -->
    <FormInput name="ownerName" type="text" placeholder="John">
      Owner Name
    </FormInput>

    <!-- Paternal Surname -->
    <FormInput name="ownerPtrlSurname" type="text" placeholder="Doe">
      Paternal Surname
    </FormInput>

    <!-- Maternal Surname -->
    <FormInput name="ownerMtrlSurname" type="text" placeholder="Doe">
      Maternal Surname
    </FormInput>

    <!-- RFC (Registro Federal de Contribuyentes) -->
    <FormInput name="rfc" type="text" placeholder="VECJ880326">
      RFC
    </FormInput>
  </div>

  <div class="flex flex-wrap gap-4">
    <!-- Phone Number -->
    <FormInput name="phoneNumber" type="tel" placeholder="1234567890">
      Phone Number
    </FormInput>

    <!-- Address -->
    <FormInput name="address" type="text" placeholder="215 E Tasman Dr Po Box 65502 CA 95134 San Jose">
      Address
    </FormInput>

    <!-- Birth Date -->
    <FormInput name="birthDate" type="date">
      Birth Date
    </FormInput>
  </div>

  <!-- Submit Button -->
  <div class="flex justify-end mt-6">
    <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-md hover:bg-blue-600">
      Save Account
    </button>
  </div>
</form>
