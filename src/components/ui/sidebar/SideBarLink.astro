---
interface Props {
    href: string;
}

const { href } = Astro.props;
---
<a class="flex items-center px-4 py-2 mt-2 text-gray-600 transition-colors duration-300 transform rounded-md dark:text-gray-400 hover:bg-gray-100 dark:hover:bg-gray-800 dark:hover:text-gray-200 hover:text-gray-700" href={href}>
    <slot name="icon"/>

    <span class="mx-4 font-medium">
        <slot/>
    </span>
</a>